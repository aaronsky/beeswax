{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/dist/app.bundle.js",
            "runtimeArgs": [
                "--inspect"
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build dev",
            "stopOnEntry": false,
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 5858
        }
    ]
}