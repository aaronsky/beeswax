{
  "name": "beeswax",
  "version": "0.0.1",
  "description": "A modular task automation and reporting tool",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run build:ts && npm run build:static && npm run build:next",
    "build:ts": "tsc",
    "build:next": "next build ./dist/client",
    "build:static": "mkdir -p ./dist/client/static && cp -ap ./app/client/static/. ./dist/client/static",
    "dev": "nodemon",
    "start": "NODE_ENV=production node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaronsky/beeswax.git"
  },
  "keywords": [
    "ci",
    "continuous",
    "integration",
    "jenkins"
  ],
  "author": "Aaron Sky <aaronsky@skyaaron.com> (http://skyaaron.com/)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/aaronsky/beeswax/issues"
  },
  "homepage": "https://github.com/aaronsky/beeswax#readme",
  "devDependencies": {
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-router": "^7.0.22",
    "@types/lodash": "^4.14.63",
    "@types/react": "^15.0.23",
    "@types/react-dom": "^15.5.0",
    "ava": "^0.19.1",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "glob": "^7.1.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-router": "^7.1.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "next": "^2.3.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  }
}
