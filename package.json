{
  "name": "beeswax",
  "version": "0.0.1",
  "description": "A modular task automation and reporting tool",
  "main": "dist/index.js",
  "scripts": {
    "clean": "n-clean dist",
    "postclean": "n-run \"echo Done cleaning\"",

    "build": "npm run ts:build && n-run \"npm run static:build\" \"npm run style:build\" && npm run next:build",
    "postbuild": "n-run \"echo Build succeeded\"",
    
    "prewatch": "npm run build",
    "watch": "nodemon",

    "ts:build": "tsc",
    "ts:watch": "tsc -w",

    "next:build": "next build ./dist/client",

    "style:build": "node-sass --include-path app/client/scss app/client/scss/main.scss dist/client/static/css/main.css",
    "style:watch": "node-sass -w --include-path app/client/scss app/client/scss/main.scss dist/client/static/css/main.css",
    
    "static:build": "imagemin app/client/img/* -o=dist/client/static/img",
    
    "start": "NODE_ENV=production node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaronsky/beeswax.git"
  },
  "keywords": [
    "ci",
    "continuous",
    "integration",
    "jenkins"
  ],
  "author": "Aaron Sky <aaronsky@skyaaron.com> (http://skyaaron.com/)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/aaronsky/beeswax/issues"
  },
  "homepage": "https://github.com/aaronsky/beeswax#readme",
  "devDependencies": {
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-router": "^7.0.22",
    "@types/lodash": "^4.14.63",
    "@types/react": "^15.0.23",
    "@types/react-dom": "^15.5.0",
    "ava": "^0.19.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-build-tools": "^2.2.5",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "glob": "^7.1.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-router": "^7.1.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "next": "^2.3.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  }
}
