{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": true,
        "pretty": true,
        "rootDir": "./app",
        "outDir": "./dist"
    },
    "include": [
        "app/**/*.ts",
        "app/views/**/*.tsx"
    ],
    "exclude": [
        ".github/",
        ".vscode/",
        "node_modules/",
        "app/public/**/*"
    ]
}